version: "3"
services:
  mc:
    image: 192.168.50.100:5000/project_x86_64
    deploy:
      placement:
        constraints: [node.role == manager]
      restart_policy:
        condition: none
    command: mctr ../cfg/MyExample.cfg
  hc1:
    image: 192.168.50.100:5000/project_armv7l
    deploy:
      placement:
        constraints: [node.role != manager]
      restart_policy:
        condition: none
    volumes:
      - /sys:/sys
    command: ./MyExample mc 3000
  hc2:
    image: 192.168.50.100:5000/project_armv7l
    deploy:
      placement:
        constraints: [node.role != manager]
      restart_policy:
        condition: none
    volumes:
      - /sys:/sys
    command: ./MyExample mc 3000
    
